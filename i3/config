bindsym $mod+0 workspace $workspace10

# Switch workspaces on current output
bindsym control+Mod1+h workspace prev_on_output
bindsym control+Mod1+l workspace next_on_output
# Allow workspaces to be moved to different outputs
bindsym control+$mod+Mod1+l move workspace to output right
bindsym control+$mod+Mod1+h move workspace to output left
bindsym control+$mod+Mod1+k move workspace to output up
bindsym control+$mod+Mod1+j move workspace to output down
# Switch outputs (relative)
bindsym control+$mod+h focus output left
bindsym control+$mod+l focus output right
bindsym control+$mod+k focus output up
bindsym control+$mod+j focus output down

# Move windows (containers) to workspace on same output and switch to that workspace
bindsym control+Mod1+Shift+Left move container to workspace prev_on_output; workspace prev_on_output;
bindsym control+Mod1+Shift+Right move container to workspace next_on_output; workspace next_on_output;

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1; workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2; workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3; workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4; workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5; workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6; workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7; workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8; workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9; workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10; workspace $workspace10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit


# resize window (you can also use the mouse for that)
mode "  " {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10px or 10 ppt
        bindsym Down resize grow height 10px or 10 ppt
        bindsym Up resize shrink height 10px or 10 ppt
        bindsym Right resize grow width 10px or 10 ppt

        bindsym Mod1+Left resize shrink width 100px or 100 ppt
        bindsym Mod1+Down resize grow height 100px or 100 ppt
        bindsym Mod1+Up resize shrink height 100px or 100 ppt
        bindsym Mod1+Right resize grow width 100px or 100 ppt

        bindsym control+Up move up 10px
        bindsym control+Down move down 10px
        bindsym control+Left move left 10px
        bindsym control+Right move right 10px

        bindsym control+Mod1+Up move up 100px
        bindsym control+Mod1+Down move down 100px
        bindsym control+Mod1+Left move left 100px
        bindsym control+Mod1+Right move right 100px

        # back to normal: Enter or Escape
        bindsym Escape mode "default"
}

bindsym $mod+r mode "  "

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	output eDP-1
	output eDP-1-1
    status_command i3blocks -c ~/.i3/i3blocks.conf
    mode hide
    modifier $mod
    font pango:FontAwesome 20
	workspace_buttons yes
	tray_output primary
    colors {
      separator $base03
      background $base01
      statusline $base05
#                        border  background text
      focused_workspace  $base01 $base01    $base07
      active_workspace   $base01 $base02    $base03
      inactive_workspace $base01 $base01    $base03
      urgent_workspace   $base01 $base01    $base08
    }
}

