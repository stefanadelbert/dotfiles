# Pulse Audio controls
# Reversed the bindings so that pushing the keyboard volume dial away increases thew volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym XF86Sleep exec i3-msg exit

# Bindings for print screen
bindsym --release Print exec scrot $(mktemp -p ~/Pictures -t screenshot.XXXX.png)
# Take a screenshot of a selection and put it in the clipboard
bindsym --release Shift+Print exec gnome-screenshot --area --clipboard --remove-border

# Run the following programs:
exec xautolock -time 180 -locker ~/.scripts/lock
exec unclutter

# http://www.nongnu.org/autocutsel/
